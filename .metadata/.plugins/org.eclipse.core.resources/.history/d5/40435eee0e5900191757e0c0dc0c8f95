package io.github.hardlitchi.rest.user.bean;

import lombok.Data;

/**
 * 複素数クラス.
 * @author hardlitchi
 * @version 1.0
 */
@Data
public class Complex {

	/** 実数部. */
	private double real;
	/** 虚数部. */
	private double image;

	/**
	 * 加算.
	 * @param complex 複素数
	 * @return 加算結果
	 */
	public Complex add(Complex complex) {
		this.real += complex.getReal();
		this.image += complex.getImage();

		return this;
	}

	/**
	 * 減算.
	 * @param complex 複素数
	 * @return 減算結果
	 */
	public Complex minus(Complex complex) {
		this.real -= complex.getReal();
		this.image -= complex.getImage();

		return this;
	}
}
